        inst.target = target;
        show_debug_message("The target of the infliction is: " +string(target) + " (" + string(target.name) + ")");
        ds_list_add(target.afflictions, inst);
        
        // apply the effect immediately
        with(inst) {
            event_user(0);
        }
    }
}
