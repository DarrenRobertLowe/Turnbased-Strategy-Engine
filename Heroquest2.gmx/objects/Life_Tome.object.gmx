            <string>///
event_inherited();

ds_list_clear(childClasses); // we are the top-level weapon
hierarchy = 0; // how distant this is from a specific weapon

// Available Spells based on tome level, Hero level is x3
spells = ds_list_create();

spellsRemaining = ceil(random(3));
if (spellsRemaining &lt; 1) then spellsRemaining = 1;


level = 4;


var tempSPELLS = ds_list_create();
ds_list_copy(tempSPELLS, global.LIFE_SPELLS);
var spellCount = ds_list_size(tempSPELLS);

repeat (spellsRemaining) {
    if (spellCount == 0) then spellsRemaining = 0;
    
    else {
        var ind = floor(random(spellCount));
        if (ind &gt;= spellCount) then ind = (spellCount-1);
        
        if (ind &gt; -1) {
            var aSpell    = ds_list_find_value(tempSPELLS, ind);
            show_debug_message("aSpell: "+ string(aSpell));
            
            ds_list_delete(tempSPELLS, ind); // remove the spell from the list
            spellCount = ds_list_size(tempSPELLS);
            
            var spellInstance = generateSpell(aSpell, level, 0, 0);
            ds_list_add(spells, spellInstance);
        } else {
            spellsRemaining = 0;
        }
    }
}

// add each spell as an action
for (var i=0; i &lt; ds_list_size(spells); i++) {
    ds_list_add(actions,
        ds_list_find_value(spells, 0).name
    );
}
</string>
